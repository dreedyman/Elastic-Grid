<assembly xmlns="http://maven.apache.org/POM/4.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.0.0.xsd">
    <id>bin</id>
    <formats>
        <format>dir</format>
		<format>tar.gz</format>
		<format>tar.bz2</format>
		<format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${env.RIO_HOME}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>bin/**/*</include>
            </includes>
            <fileMode>0755</fileMode>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${env.RIO_HOME}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>lib/**/*</include>
                <include>config/**/*</include>
                <include>deploy/*.txt</include>
                <include>logs/*.txt</include>
                <include>policy/**/*</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <includes>
				<include>bin/**/*</include>
            </includes>
            <excludes>
                <exclude>bin/Rio.app/**</exclude>
            </excludes>
            <fileMode>0755</fileMode>
			<useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <includes>
				<include>config/**/*</include>
				<include>lib/**</include>
            </includes>
			<useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
    </fileSets>
	<files>
		<file>
			<source>README.txt</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
        <file>
			<source>COPYING.txt</source>
			<outputDirectory>/</outputDirectory>
			<filtered>false</filtered>
		</file>
        <file>
			<source>COPYING.LESSER.txt</source>
			<outputDirectory>/</outputDirectory>
			<filtered>false</filtered>
		</file>
    </files>
    <dependencySets>
		<!-- Kernel dependencies -->
        <dependencySet>
            <includes>
                <include>com.elasticgrid:amazon-ec2-bootstrapper</include>
                <include>com.elasticgrid:amazon-ec2-provisioner</include>
				<include>com.elasticgrid:elastic-grid-core</include>
				<include>com.elasticgrid:elastic-grid-utils</include>
				<include>com.elasticgrid:elastic-grid-cli</include>
                <!--<include>*:elastic-grid-*</include>-->
                <include>com.xerox.amazonws:typica</include>
                <include>org.slf4j:*</include>
                <!--<include>log4j:log4j</include>-->
            </includes>
            <excludes>
                <exclude>org.rioproject:rio</exclude>
                <exclude>net.jini:jsk-lib</exclude>
                <exclude>net.jini:jsk-platform</exclude>
            </excludes>
			<outputDirectory>lib/elastic-grid/kernel</outputDirectory>
        </dependencySet>
		<!-- Framework dependencies -->
		<dependencySet>
            <includes>
                <include>*:amazon-sqs</include>
            </includes>
			<outputDirectory>lib/elastic-grid/framework</outputDirectory>
        </dependencySet>
        <!-- Substrates dependencies -->
		<dependencySet>
            <includes>
                <include>com.elasticgrid.substrates:*</include>
            </includes>
			<outputDirectory>lib/elastic-grid/substrates</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>