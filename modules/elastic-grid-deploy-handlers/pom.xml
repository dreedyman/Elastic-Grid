    <modelVersion>4.0.0</modelVersion>
    <artifactId>elastic-grid-deploy-handlers</artifactId>
    <!--<packaging>jsb</packaging>-->
    <packaging>jar</packaging>
    <name>Modules :: Elastic Grid Deploy Handlers</name>

    <dependencies>

        <!-- Amazon EC2 discovery -->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>amazon-ec2-discovery</artifactId>
            <version>${pom.version}</version>
        </dependency>

        <!-- Amazon S3 Storage implementation -->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>amazon-s3-storage</artifactId>
            <version>${pom.version}</version>
        </dependency>

        <!-- Rackspace CloudFiles Storage implementation -->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>rackspace-cloudfiles-storage</artifactId>
            <version>${pom.version}</version>
        </dependency>

        <!-- Elastic Grid Utils -->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>elastic-grid-utils</artifactId>
            <version>${pom.version}</version>
        </dependency>

        <!-- Amazon S3 integration -->
        <dependency>
            <groupId>net.java.dev.jets3t</groupId>
            <artifactId>jets3t</artifactId>
        </dependency>

        <!-- Jini 2.1 dependencies -->
        <dependency>
            <groupId>net.jini</groupId>
            <artifactId>jsk-platform</artifactId>
        </dependency>

        <!-- Rio dependencies -->
        <dependency>
            <groupId>org.rioproject</groupId>
            <artifactId>rio</artifactId>
        </dependency>
        <dependency>
            <groupId>org.rioproject</groupId>
            <artifactId>monitor</artifactId>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.groovy.maven</groupId>
                <artifactId>gmaven-plugin</artifactId>
                <version>1.0-rc-5</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generateStubs</goal>
                            <goal>compile</goal>
                            <goal>generateTestStubs</goal>
                            <goal>testCompile</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <fileset>
                                    <directory>${pom.basedir}/src/main/java</directory>
                                    <includes>
                                        <include>**/*.groovy</include>
                                    </includes>
                                </fileset>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.4.1</version>
                <configuration>
                    <forkMode>never</forkMode>
                    <excludes>
                        <exclude>**/EC2Test.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
