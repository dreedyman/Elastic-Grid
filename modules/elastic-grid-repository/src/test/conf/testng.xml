<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Elastic Grid Repository Tests">
    <parameter name="numberOfFiles" value="10"/>
    <test name="Local Repository Test">
        <classes>
            <class name="com.elasticgrid.repository.LocalRepositoryTest"/>
        </classes>
    </test>
    <test name="Remote Repository Test">
        <classes>
            <class name="com.elasticgrid.repository.RemoteRepositoryTest"/>
        </classes>
    </test>
    <test name="Repository Manager Test">
        <classes>
            <class name="com.elasticgrid.repository.RepositoryManagerTest"/>
        </classes>
    </test>
</suite>
