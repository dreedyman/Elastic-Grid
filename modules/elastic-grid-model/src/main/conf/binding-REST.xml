        <!--<value name="opstring-name" field="opStringName" usage="optional"/>-->
        <!--<value name="deploy-directory" field="deployDir" usage="optional"/>-->
        <!--<value name="activation-type" field="activationType" usage="optional"/>-->
    <!--</mapping>-->

</binding>
