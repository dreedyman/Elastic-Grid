<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.elasticgrid</groupId>
        <artifactId>elastic-grid-modules</artifactId>
        <version>0.9.3</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>private-lan-cloud-platform</artifactId>
    <packaging>classdepandjar</packaging>
    <name>Modules :: Private LAN Cloud Platform (JSB)</name>

    <dependencies>

        <!-- Elastic Grid Private LAN provisioner -->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>private-lan-provisioner</artifactId>
            <version>${pom.version}</version>
        </dependency>

        <!-- Elastic Grid Manager -->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>elastic-grid-manager</artifactId>
            <version>${pom.version}</version>
        </dependency>

        <!-- Elastic Grid EC2 Provisioner -->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>amazon-ec2-provisioner</artifactId>
            <version>${pom.version}</version>
        </dependency>

        <!-- Elastic Grid Private LAN Provisioner -->
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>private-lan-provisioner</artifactId>
            <version>${pom.version}</version>
        </dependency>

        <!-- Rio dependencies -->
        <dependency>
            <groupId>org.rioproject</groupId>
            <artifactId>rio</artifactId>
            <scope>provided</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                    <optimize>true</optimize>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.groovy.maven</groupId>
                <artifactId>gmaven-plugin</artifactId>
                <version>1.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generateStubs</goal>
                            <goal>compile</goal>
                            <goal>generateTestStubs</goal>
                            <goal>testCompile</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <fileset>
                                    <directory>${pom.basedir}/src/main/java</directory>
                                    <includes>
                                        <include>**/*.groovy</include>
                                    </includes>
                                </fileset>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-rio-plugin</artifactId>
                <version>4.0-M3</version>
                <extensions>true</extensions>
                <configuration>
                    <createJars>
                        <createJar>
                            <ins>
                                <in>com.elasticgrid.platforms.lan</in>
                            </ins>
                            <topclasses>
                                <topclass>com.elasticgrid.platforms.lan.LANCloudPatformManagerJSB</topclass>
                                <topclass>com.elasticgrid.platforms.lan.LANCloudPatformManagerJSB$1</topclass>
                                <topclass>com.elasticgrid.platforms.lan.LANCloudPlatformManagerProxy</topclass>
                            </topclasses>
                        </createJar>
                        <createJar>
                            <classifier>dl</classifier>
                            <ins>
                                <in>com.elasticgrid.platforms.lan</in>
                            </ins>
                            <topclasses>
                                <topclass>com.elasticgrid.platforms.lan.LANCloudPlatformManagerProxy</topclass>
                            </topclasses>
                        </createJar>
                    </createJars>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
