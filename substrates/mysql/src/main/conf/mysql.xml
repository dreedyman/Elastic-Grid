<!DOCTYPE opstring SYSTEM "http://www.rio-project.org/dtd/rio_opstring.dtd">

<opstring>

    <OperationalString Name="MySQL">

        <Groups>
		    <Group>rio</Group>
        </Groups>
        <Organization>Elastic Grid, LLC.</Organization>
        <Codebase>https://elastic-grid.s3.amazonaws.com/</Codebase>

        <SystemRequirements id="Elastic Grid Platform">
            <SystemComponent Name="SoftwareSupport">
                <Attribute Name="Name" Value="Elastic Grid Kernel"/>
                <Attribute Name="Version" Value="1.0"/>
            </SystemComponent>
            <SystemComponent Name="SoftwareSupport">
                <Attribute Name="Name" Value="Elastic Grid Framework"/>
                <Attribute Name="Version" Value="1.0"/>
            </SystemComponent>
        </SystemRequirements>

        <ServiceExec Name="MySQL">
            <SystemRequirements>
                <SystemComponent Name="SoftwareSupport">
                    <Attribute Name="Name" Value="MySQL"/>
                    <Attribute Name="Version" Value="5.0.51a"/>
                    <SoftwareLoad RemoveOnDestroy="no">
                        <Download Source="mysql-5.0.51a.zip"
                                  InstallRoot="${RIO_HOME}/system/external/mysql"
                                  Unarchive="yes">
                            <Location>https://elastic-grid.s3.amazonaws.com/mysql/</Location>
                        </Download>
                        <PostInstall RemoveOnCompletion="no">
                            <Exec nohup="no">
                                <CommandLine>/bin/chmod</CommandLine>
                                <InputArg>+x $EG_HOME/system/external/mysql/*.sh $EG_HOME/system/external/mysql/bin/mysqld $EG_HOME/system/external/mysql/scripts/mysql_install_db</InputArg>
                            </Exec>
                        </PostInstall>
                    </SoftwareLoad>
                </SystemComponent>
            </SystemRequirements>

            <!--<Data Unarchive="yes" Perms="ugo+rwx">-->
                <!--<FileName>sample.war</FileName>-->
                <!--<Source>https://elastic-grid.s3.amazonaws.com/tomcat/</Source>-->
                <!--<Target>${RIO_HOME}/system/external/tomcat/apache-tomcat-6.0.16/webapps</Target>-->
            <!--</Data>-->

            <Exec>
                <CommandLine>start-mysql.sh</CommandLine>
            </Exec>

            <Maintain>1</Maintain>
            <MaxPerMachine>1</MaxPerMachine>

        </ServiceExec>

