<assembly xmlns="http://maven.apache.org/POM/4.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.1.0-SNAPSHOT.xsd">
    <id>bin</id>
    <formats>
        <format>dir</format>
		<format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${basedir}/target/private-lan</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>bin/*</exclude>
                <exclude>config/eg.properties.template</exclude>
            </excludes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>bin</directory>
            <includes>
				<include>*</include>
            </includes>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
			<useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${basedir}/target/private-lan/bin/eg</source>
            <outputDirectory>/bin</outputDirectory>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <includes>
                <!-- Rackspace Clouds dependencies -->
                <include>com.elasticgrid:rackspace-cloudfiles-storage</include>
                <include>net.elasticgrid.rackspace:rackspace-cloudservers</include>
                <include>com.mosso:cloud-files</include>
                <include>log4j:log4j</include>
            </includes>
			<outputDirectory>lib/elastic-grid</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>