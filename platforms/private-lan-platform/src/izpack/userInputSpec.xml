        <field type="space"/>
        <field type="text" variable="aws.accessId">
            <description align="left" id="aws.accessId"/>
            <spec size="16"/>
            <validator class="com.izforge.izpack.util.NotEmptyValidator" id="aws.accessId.empty"/>
        </field>
        <field type="text" variable="aws.secretKey">
            <description align="left" id="aws.secretKey"/>
            <spec size="16"/>
            <validator class="com.izforge.izpack.util.NotEmptyValidator" id="aws.secretKey.empty"/>
        </field>
	</panel>

    <panel order="1" layout="center">
		<field type="title" id="aws.ec2.title"/>
        <field type="staticText" align="left" id="aws.ec2.key.intro"/>
        <field type="space"/>
        <field type="text" variable="aws.ec2.key">
            <description align="left" id="aws.ec2.key"/>
            <spec size="16"/>
            <validator class="com.izforge.izpack.util.NotEmptyValidator" id="aws.ec2.key.empty"/>
        </field>
	</panel>

    <panel order="2" layout="center">
        <field type="title" id="aws.ec2.title"/>
        <field type="staticText" align="left" id="eg.dropBucket.intro"/>
        <field type="space"/>
        <field type="text" variable="eg.dropBucket">
            <description align="left" id="eg.dropBucket"/>
            <spec size="16"/>
            <validator class="com.izforge.izpack.util.NotEmptyValidator" id="eg.dropBucket.empty"/>
