<shortcuts>
	<skipIfNotSupported/>
	<programGroup defaultName="Elastic Grid" location="applications"/>

	<shortcut
		name="Start Elastic Grid Monitor"
		target="$INSTALL_PATH\bin\eg.cmd"
        commandLine="start monitor"
		workingDirectory="$INSTALL_PATH\bin"
		description="This starts Elastic Grid Monitor"
		programGroup="yes"
		desktop="no"
		applications="no"
		startMenu="no"
		startup="no"/>

	<shortcut
		name="Start Elastic Grid Agent"
		target="$INSTALL_PATH\bin\eg.cmd"
        commandLine="start agent"
		workingDirectory="$INSTALL_PATH\bin"
		description="This starts Elastic Grid Agent"
		initialState="noShow"
		programGroup="yes"
		desktop="no"
		applications="no"
		startMenu="no"
		startup="no"/>

	<shortcut
		name="Start Elastic Grid Administration Console"
		target="$INSTALL_PATH\bin\eg-ui.cmd"
        workingDirectory="$INSTALL_PATH\bin"
		description="This starts the Elastic Grid administration console"
		programGroup="yes"
		desktop="no"
		applications="no"
		startMenu="no"
		startup="no">
	</shortcut>

	<shortcut
		name="Uninstall Elastic Grid"
		target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
		commandline=""
		description="Uninstalls Elastic Grid"
		programGroup="yes"
		desktop="no"
		applications="no"
		startMenu="no"
		startup="no"
		iconFile="%SystemRoot%\system32\SHELL32.dll"
		iconIndex="31"/>

</shortcuts>
