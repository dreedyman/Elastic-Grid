scriptDir="$(dirname $0)"

RIO_HOME=$EG_HOME

CP="$EG_HOME/lib/rio-ui.jar:$EG_HOME/lib/apache-river/lib/jsk-platform.jar:$EG_HOME/lib/apache-river/lib/jsk-lib.jar:$EG_HOME/lib/prefuse/prefuse.jar"
for j in $(find $EG_HOME/lib/elastic-grid/kernel -name "*.jar")
do
    CP=$CP:$j
done
for j in $(find $EG_HOME/lib/elastic-grid/substrates -name "*.jar")
do
    CP=$CP:$j
done

if [ "$scriptDir" = "bin" ] ; then
    path_to_jar="lib/rio-ui.jar"
else
    if [ "$scriptDir" = "." ] ; then
        path_to_jar="../lib/rio-ui.jar"
    else
        echo "Dont know how to start Elastic Grid UI from [$scriptDir]"
        exit 1
    fi
fi

# Check for running on OS/X
opSys=`uname -s`
if [ $opSys = "Darwin" ] ; then
    java  -Xdock:name="Elastic Grid" -jar $path_to_jar $EG_HOME/config/ui.config $*
else
    java -jar $path_to_jar $EG_HOME/config/ui.config $*
fi
