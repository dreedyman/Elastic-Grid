echo "Bootstrapping Elastic Grid platform..."

CP="$EG_HOME/lib/groovy/groovy-all-1.6.0.jar:$EG_HOME/lib/spring/spring.jar"
for j in $(find $EG_HOME/lib/elastic-grid -name "*.jar")
do
    CP=$CP:$j
done

# Check for JAVA_HOME
if [ -z "$JAVA_HOME" ] ; then
    JAVACMD=java
else
    JAVACMD="$JAVA_HOME/bin/java"
fi

$JAVACMD -cp $CP -DEG_HOME=$EG_HOME com.elasticgrid.amazon.boot.Bootstrapper $* | logger -t elastic-grid
