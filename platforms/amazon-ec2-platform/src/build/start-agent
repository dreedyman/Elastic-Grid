if [ "$1" = "" ]; then
    echo "You must specify a cluster name."
    echo "start-agent CLUSTER_NAME"
    exit -1
fi

echo "Starting agent for cluster $1"
ec2run ami-4c698d25 -g eg-monitor -g elastic-grid -g eg-agent -g elastic-grid-cluster-$1 -g default -k eg-keypair -f ec2params.config
